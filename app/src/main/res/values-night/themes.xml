<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Form" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant" tools:targetApi="23">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">#060607</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FEBD6D</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"  tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Form.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Form.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Form.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="theme_color">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>